{
  "name": "@dnr-ui/tokens",
  "devDependencies": {
    "@divriots/style-dictionary-to-figma": "^0.4.0",
    "style-dictionary": "^3.7.1",
    "token-transformer": "^0.0.27"
  },
  "description": "Design Tokens to be used in DNR applications",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "transform:global": "npx token-transformer figma/tokens.json data/global.json global",
    "transform:themes": "npx token-transformer figma/tokens.json --theme --themeOutputPath data ",
    "build:style-dictionary": "node build.js",
    "build": "npm run transform:global && npm run transform:themes && npm run build:style-dictionary",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
